{
  "name": "Redmine Dev Container",
  "dockerComposeFile": "compose.yml",
  "service": "redmine",
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        "Shopify.ruby-lsp"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.exclude": {
          "**/vendor/bundle": true
        },
        "rubyLsp.erpEnabled": true,
        "rubyLsp.rubyVersionManager": {
          "identifier": "none"
        },
        "rubyLsp.bundleGemfile": "/workspace/Gemfile",
        "rubyLsp.customRubyCommand": "bundle exec ruby"
      }
    }
  },
  "forwardPorts": [
    3000
  ],
  "postCreateCommand": ".devcontainer/post_create.sh",
  "postStartCommand": ".devcontainer/post_start.sh",
  "shutdownAction": "stopCompose",
  "remoteUser": "vscode"
}